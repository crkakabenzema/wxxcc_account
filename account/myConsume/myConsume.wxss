/* pages/A-centrality/A-myConsume/A-myConsume.wxss */

.container{
  font-size: 28rpx
}

.line{
  height: 20rpx;
  width: 100%;
  background-color: #eee
}


.basic_info {
  padding: 0 27rpx;
  box-sizing: border-box;
  padding-bottom: 20rpx;
}

.basic_info_in {
  border: 1px solid #eee;
  border-radius: 10rpx;
  box-shadow: 0 5rpx 5rpx #f7f7f7
}

.basic_img {
  width: 31rpx;
  height: 31rpx;
  margin-right: 10rpx;
}

.arrow {
  width: 15rpx;
  height: 23rpx;
}

.basic_title {
  display: flex;
  justify-content: space-between;
  text-align: center;
  padding: 17rpx 20rpx;
  box-sizing: border-box;
  align-items: center;
}

.basic_title_in {
  display: flex;
  align-items: center;
}

.x-line {
  width: 100%;
  height: 1px;
  background-color: #eee;
}

.basic_txt {
  padding: 20rpx;
  box-sizing: border-box;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-items: center
}

.basic_txt view {
  line-height: 45rpx;
}

.txt-in {
  color: #666;
}

.basic_txt_title {
  font-weight: bold;
  margin: 20rpx;
}

.basic_content {
  font-size: 32rpx
}

.zhi{
  color: #67C23A
}