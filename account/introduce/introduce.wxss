/* pages/A-introduceCompany/A-introduceCompany.wxss */
page {
  background-color: #eee;
  font-size: 28rpx;
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
}

.top {
  width: 100%;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 5rp 5rp #e9e9e9;
}

.one_list {
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  align-items: center;
}

input {
  width: 450rpx;
}

.x {
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
  background-color: #999;
  color: #fff;
  text-align: center;
  line-height: 34rpx;
  font-size: 24rpx;
}

.x_line {
  width: 100%;
  height: 1px;
  background-color: #eee;
}

.middle{
  width: 100%;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 5rp 5rp #e9e9e9;
  margin-top: 20rpx;
  padding: 30rpx 20rpx;
  box-sizing: border-box
}

.area{
  border: 1px solid #eee;
  width: 100%;
  min-height: 770rpx;
  border-radius: 15rpx;
  padding:  20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  flex-direction: column
}

textarea{
  width: 100%;
  min-height: 700rpx;
}

.text_num{
  color: #999;
  text-align: right
}

.middle_title{
  margin-bottom: 20rpx
}

.btn {
  width: 100%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  margin-top: 40rpx;
  background: linear-gradient(to right, #22a0ff, #007ce7);
  border-radius: 15rpx;
  box-shadow: 0 5rpx 5rpx #8ccaf6;
}