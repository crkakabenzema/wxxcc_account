/* pages/dataInfo/dataInfo.wxss */
/* pages/A-dataInfo/A-dataInfo.wxss */

page {
  background-color: #eee;
  font-size: 28rpx;
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
}

.top {
  width: 100%;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 5rp 5rp #e9e9e9;
}

.one_list {
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  align-items: center;
}

input {
  width: 450rpx;
}

.x {
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
  background-color: #999;
  color: #fff;
  text-align: center;
  line-height: 34rpx;
  font-size: 24rpx;
}

.x_line {
  width: 100%;
  height: 1px;
  background-color: #eee;
}

.middle, .end {
  width: 100%;
  background-color: #fff;
  border-radius: 15rpx;
  margin-top: 20rpx;
  box-shadow: 0 5rp 5rp #e9e9e9;
}

.middle_in, .end_in {
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.arrow {
  width: 15rpx;
  height: 23rpx;
}

.btn {
  width: 100%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  margin-top: 40rpx;
  background: linear-gradient(to right, #22a0ff, #007ce7);
  border-radius: 15rpx;
  box-shadow: 0 5rpx 5rpx #8ccaf6;
}

.time {
  background-color: #fff;
}

.time_txt{
  display: flex;
  align-items: center;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 44rpx;
  box-sizing: border-box;
  justify-content: space-between;
  background-color: #d9b165;
  color: #fff;
  font-size: 28rpx;
  width: 100%
}

.modalBox{
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, .7);
  width: 100%;
  height: 100%;
  z-index: 2;
}

 .time{
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 3;
  width: 100%
} 

.close_time,.real{
  padding: 25rpx
}


input::input-placeholder { /* WebKit browsers */
    color:    #999;
}
input::-webkit-input-placeholder { /* WebKit browsers */
    color:    #999;
}
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
    color:    #999;
}
::-moz-placeholder { /* Mozilla Firefox 19+ */
    color:    #999;
}
:-ms-input-placeholder { /* Internet Explorer 10+ */
    color:    #999;
}
