.modal_box {
  position: fixed;
  background-color: rgba(0, 0, 0, 0.7);
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.modal .modal_in {
  width: 582rpx;
  height: 480rpx;
  background-color: #fff;
  position: fixed;
  top: 50%;
  left: 50%;
  margin-left: -291rpx;
  margin-top: -240rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.modal .modal_in .x {
  padding: 15rpx 15rpx 0 0;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-end;
