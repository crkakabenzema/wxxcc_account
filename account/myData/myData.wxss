  font-size: 40rpx;
}

.modal .modal_in image {
  width: 203rpx;
  height: 166rpx;
}

.modal_txt {
  padding: 20rpx 0;
  font-size: 38rpx;
}

.modal_txt_t {
  color: #666;
  border-bottom: 1px solid #eee;
  padding-bottom: 20rpx;
}

.modal .modal_in .modal_bottom {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 90rpx;
  font-size: 32rpx;
  line-height: 90rpx;
  color: #409eff;
}

.close, .right {
  width: 50%;
  height: 100%;
}
